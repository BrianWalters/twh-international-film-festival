{% extends 'base.html.twig' %}

{% block title %}Comments for {{ omdb(movie).Title }}{% endblock %}

{% block body %}
    <main class="container">
        <div class="row">
            <div class="col-sm">
                <h1 class="mt-3 mb-3">Comments for <a href="{{ path('movie_details', {movie:movie.id}) }}">{{ movie.secret ? "SECRET" : omdb(movie).Title }}</a></h1>
                {% for comment in comments %}
                    {% include 'partials/comment.html.twig' %}
                {% endfor %}
                <p>
                    <a href="{{ path('movie_details', {movie:movie.id}) }}">Back to movie</a>
                </p>
            </div>
        </div>
    </main>
{% endblock %}