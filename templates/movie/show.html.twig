{% extends 'base.html.twig' %}

{% block title %}Movie{% endblock %}

{% block body %}
    <main class="container"">
        <div class="row">
            <div class="col-sm">
                <h1>Movie</h1>

                <table class="table text-light">
                    <tbody>
                    <tr>
                        <th>Id</th>
                        <td>{{ movie.id }}</td>
                    </tr>
                    <tr>
                        <th>Title</th>
                        <td>{{ movie.title }}</td>
                    </tr>
                    <tr>
                        <th>Imdb</th>
                        <td>{{ movie.imdb }}</td>
                    </tr>
                    <tr>
                        <th>StartTime</th>
                        <td>{{ movie.startTime|date }}</td>
                    </tr>
                    <tr>
                        <th>Runtime</th>
                        <td>{{ movie.runtime }}</td>
                    </tr>
                        <tr>
                            <td>Movie over</td>
                            <td>
                                {{ movie.movieOver ? 'Yes' : 'No' }}
                            </td>
                        </tr>
                        <tr>
                            <td>Movie active</td>
                            <td>{{ movie.movieActive ? 'Yes' : 'No' }}</td>
                        </tr>
                    </tbody>
                </table>

                <p>
                    <a class="btn btn-secondary" href="{{ path('movie_index') }}">back to list</a>

                    <a class="btn btn-primary" href="{{ path('movie_edit', {'id': movie.id}) }}">edit</a>
                </p>

                {{ include('movie/_delete_form.html.twig') }}
            </div>
        </div>
    </main>
{% endblock %}
