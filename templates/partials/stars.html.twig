{% macro stars(value) %}
    {% if value <= 0.5 %}
        <span class="fa fa-star-half"></span>
    {% elseif value < 1 %}
        <span class="fa fa-star-half"></span>
    {% elseif value < 1.5 %}
        <span class="fa fa-star"></span>
    {% elseif value < 2 %}
        <span class="fa fa-star"></span>
        <span class="fa fa-star-half"></span>
    {% elseif value < 2.5 %}
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
    {% elseif value < 3 %}
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star-half"></span>
    {% elseif value < 3.5 %}
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
    {% elseif value < 4 %}
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star-half"></span>
    {% elseif value == 4 %}
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
        <span class="fa fa-star"></span>
    {% endif %}
{% endmacro %}